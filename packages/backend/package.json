{
  "name": "@overdb/backend",
  "packageManager": "yarn@3.2.2",
  "scripts": {
    "start": "ts-node src",
    "dev": "nodemon",
    "graphql-type-gen": "graphql-codegen --config codegen.yml",
    "build": "scripts/build.sh",
    "deploy": "sudo systemctl stop overdb-backend.service && cp build/overdb-backend /usr/local/bin/overdb-backend && sudo systemctl restart overdb-backend.service"
  },
  "dependencies": {
    "@apollo/client": "^3.7.0",
    "apollo-server": "^3.10.3",
    "apollo-server-core": "^3.10.3",
    "apollo-server-express": "^3.10.3",
    "axios": "^1.1.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "jsdom": "^20.0.1",
    "moviedb-promise": "^3.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.13.5",
    "@graphql-codegen/fragment-matcher": "3.3.1",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typescript": "2.7.3",
    "@graphql-codegen/typescript-operations": "2.5.3",
    "@graphql-codegen/typescript-react-apollo": "3.3.3",
    "@graphql-codegen/typescript-resolvers": "2.7.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/jsdom": "^20.0.0",
    "esbuild": "^0.15.10",
    "nexe": "^4.0.0-rc.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "nodemonConfig": {
    "exec": "yarn start",
    "ext": "ts",
    "ignore": [
      "database/user_data.json",
      "moviedb_cache.json"
    ]
  }
}
