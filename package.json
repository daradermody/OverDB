{
  "name": "over-db",
  "version": "0.1.0",
  "author": "Dara Dermody",
  "description": "Web application that allows people to easily follow their favourite cast and crew in movies",
  "main": "server/index.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daradermody/OverDB.git"
  },
  "keywords": [
    "movies",
    "director",
    "actor",
    "application"
  ],
  "bugs": {
    "url": "https://github.com/daradermody/OverDB/issues"
  },
  "scripts": {
    "test": "eslint . && ./list_unused_css_classes.sh && stylelint '**/*.css' '**/*.html' && ng lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "nodemonConfig": {
    "exec": "$(npm bin)/ts-node server",
    "watch": [
      "server"
    ],
    "ext": "ts",
    "ignore": [
      "server/database/user_data.json"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "@types/lodash": "^4.14.109",
    "ansi-to-html": "^0.6.4",
    "body-parser": "^1.18.2",
    "bootstrap": "^4.1.1",
    "core-js": "^2.5.6",
    "cors": "^2.8.4",
    "deep-object-diff": "^1.1.0",
    "deepmerge": "^2.1.0",
    "express": "^4.16.3",
    "hoek": "^5.0.3",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "morgan": "^1.9.0",
    "moviedb-promise": "^1.2.2",
    "nodemailer": "^4.6.4",
    "popper.js": "^1.14.3",
    "rxjs": "^6.1.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.0",
    "@angular/cli": "^6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/language-service": "^6.0.0",
    "@types/deepmerge": "^2.1.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.1.1",
    "@types/nodemailer": "^4.6.0",
    "codelyzer": "^4.3.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "husky": "^1.0.0-rc.6",
    "nodemon": "^1.17.4",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-node": "^6.0.3",
    "tslint": "~5.10.0",
    "typescript": "^2.7.2"
  }
}
