{
  "name": "@overdb/backend",
  "packageManager": "yarn@3.2.2",
  "scripts": {
    "start": "ts-node src",
    "dev": "NODE_ENV=development nodemon",
    "graphql-type-gen": "graphql-codegen --config codegen.yml",
    "hash-password": "ts-node scripts/digestPassword.ts",
    "build": "NODE_ENV=production scripts/build.sh"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "argon2": "^0.31.1",
    "axios": "^1.5.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "jsdom": "^22.1.0",
    "moviedb-promise": "^4.0.2",
    "nanoid": "~3.3.6",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.6.2",
    "esbuild": "^0.19.3",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "exec": "yarn start",
    "ext": "ts",
    "ignore": [
      "database/user_data.json",
      "moviedb_cache.json"
    ]
  }
}
